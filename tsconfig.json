{
    "compilerOptions": {
        "outDir": "./package/dist",
        "module": "esnext",
        "target": "ES6",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./package/src"],
    "exclude": ["./package/node_modules", "build", "./package/dist", "example", "./package/src/example.tsx"]
}
